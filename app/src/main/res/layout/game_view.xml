<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingEnd="5dp"
    android:paddingStart="5dp">

    <TextView
        android:id="@+id/champion_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:text="Champion Name"
        android:textStyle="bold"
        android:layout_alignTop="@+id/champion_face_box"
        android:layout_toRightOf="@+id/champion_face_box"
        android:layout_toEndOf="@+id/champion_face_box">

    </TextView>

    <TextView
        android:id="@+id/game_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Type"
        android:layout_alignBottom="@+id/champion_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/champion_face_box"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/profile_icon_tsm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kill Count"
        android:id="@+id/kc_box"
        android:layout_below="@+id/champion_name"
        android:layout_toRightOf="@+id/champion_face_box"
        android:layout_toEndOf="@+id/champion_face_box" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Death Count"
        android:id="@+id/death_count_box"
        android:layout_below="@+id/champion_name"
        android:layout_toRightOf="@+id/kc_box"
        android:layout_toEndOf="@+id/kc_box"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Assists"
        android:id="@+id/assist_count_box"
        android:layout_below="@+id/game_type"
        android:layout_alignLeft="@+id/game_type"
        android:layout_alignStart="@+id/game_type" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Creep Score"
        android:id="@+id/cs_box"
        android:layout_alignBottom="@+id/champion_face_box"
        android:layout_toRightOf="@+id/champion_face_box"
        android:layout_toEndOf="@+id/champion_face_box" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Game Duration"
        android:id="@+id/game_duration_box"
        android:layout_alignBottom="@+id/cs_box"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
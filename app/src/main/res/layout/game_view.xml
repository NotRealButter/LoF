<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingEnd="5dp"
    android:paddingStart="5dp">

    <ImageView
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:id="@+id/champion_face_box"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/profile_icon_tsm" />

    <TextView
        android:id="@+id/champion_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:text="Champion Name"
        android:textStyle="bold"
        android:layout_alignTop="@+id/champion_face_box"
        android:layout_toRightOf="@+id/champion_face_box"
        android:layout_toEndOf="@+id/champion_face_box"
        android:layout_marginLeft="20dp">

    </TextView>

    <TextView
        android:id="@+id/game_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Type"
        android:layout_alignBottom="@+id/champion_name"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kills: 10"
        android:id="@+id/kc_box"
        android:textColor="#000000"
        android:layout_below="@+id/champion_name"
        android:layout_alignRight="@+id/cs_box"
        android:layout_alignEnd="@+id/cs_box" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Deaths: 10"
        android:id="@+id/death_count_box"
        android:textColor="#000000"
        android:layout_below="@+id/game_type"
        android:layout_toRightOf="@+id/assist_count_box"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Assists: 10"
        android:id="@+id/assist_count_box"
        android:textColor="#000000"
        android:layout_above="@+id/game_duration_box"
        android:layout_toRightOf="@+id/cs_box"
        android:layout_toEndOf="@+id/cs_box"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Creep Score"
        android:id="@+id/cs_box"
        android:layout_alignBottom="@+id/champion_face_box"
        android:layout_toRightOf="@+id/champion_face_box"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/champion_face_box"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Game Duration"
        android:id="@+id/game_duration_box"
        android:layout_alignBottom="@+id/cs_box"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:layout_alignParentEnd="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/imageView5"
        android:layout_below="@+id/champion_face_box"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>
</android.support.v7.widget.CardView>